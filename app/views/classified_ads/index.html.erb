<p id="notice"><%= notice %></p>

<h1>Listing Classified Ads</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classified_ads.each do |classified_ad| %>
      <tr>
        <td><%= classified_ad.title %></td>
        <td><%= classified_ad.description %></td>
        <td><%= link_to 'Show', classified_ad %></td>
        <td><%= link_to 'Edit', edit_classified_ad_path(classified_ad) %></td>
        <td><%= link_to 'Destroy', classified_ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

