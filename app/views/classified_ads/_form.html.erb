<% content_for :column_width_start do %>
<div class="col-md-10 col-md-offset-2">
<% end %>

<%= form_for(@classified_ad, html: {class:"form_horiontal"}) do |f| %>
  <% if @classified_ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@classified_ad.errors.count, "error") %> prohibited this classified_ad from being saved:</h2>

      <ul>
      <% @classified_ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-4">
  <div class="form-group">
    <%= f.label :title, :class => "form-control" %><br>
