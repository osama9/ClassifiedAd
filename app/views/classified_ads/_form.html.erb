    <%= f.text_area :description, :class => "form-control",placeholder: "Description...", rows: "6" %>
  </div>
  <div class="form-group">
  <%= f.button :submit,:class => "btn btn-primary" %>
  </div>
  </div>

  <div class="col-md-4 col-md-offset-1">
  <div class="form-group">
  <%= f.label :category, :class => "form-control" %>
  <%= f.collection_select :category_id, Category.all, :id, :english_name,{}, {:class => "form-control"}%>
  </div>
  <div class="form-group">
  <%= f.label :country, :class => "form-control" %>
  <%= f.collection_select :country_id, Country.all, :id, :english_name,{}, {:class => "form-control"}%>
  </div>
  <div class="form-group">
  <%= f.label :city, :class => "form-control" %>
  <%= f.collection_select :city_id, City.all, :id, :english_name,{}, {:class => "form-control"}%>
  </div>
</div>

