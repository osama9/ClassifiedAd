<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "cd-form"}) do |f| %>
  <p class="fieldset">
    <label class="image-replace cd-email" for="signin-email">E-mail</label>
    <%= f.email_field :email, autofocus: true, :class => "full-width has-padding form-control", placeholder: "Email" %>
    <span class="cd-error-message">Error message here!</span>
  </p>

  <p class="fieldset">
    <label class="image-replace cd-password" for="signin-password">Password</label>
    <%= f.password_field :password, autocomplete: "off", :class => "full-width has-padding form-control", :id => "signin-password", placeholder: "password" %>
    <span class="cd-error-message">Error message here!</span>
  </p>

  <% if devise_mapping.rememberable? -%>
    <p class="fieldset">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </p>
  <% end -%>

  <p class="fieldset">
    <%= f.submit "Log in", :class => "full-width" %>
  </p>
<% end %>

