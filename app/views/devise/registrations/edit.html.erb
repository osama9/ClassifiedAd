<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "cd-form" }) do |f| %>
  <%= devise_error_messages! %>
  <p class="fieldset">
    <label class="image-replace cd-username" for="signup-username">Username</label>
    <%= f.text_field :username, autofocus: true, :class => "full-width has-padding form-control", placeholder: "Username" %>
  </p>

  <p class="fieldset">
    <label class="image-replace cd-email" for="signup-email">Email</label>
    <%= f.email_field :email, autofocus: true, :class => "full-width has-padding form-control", placeholder: "Email" %>
  </p>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <p class="fieldset">
    <label class="image-replace cd-password" for="signup-password">Password</label> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off",placeholder: "Password", :class => "full-width has-padding form-control" %>
  </p>

  <p class="fieldset">
    <label class="image-replace cd-password" for="signup-password">Password Confirmation</label>
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Password Confirmation", :class => "full-width has-padding form-control" %>
  </p>

  <p class="fieldset">
     <label class="image-replace cd-password" for="signup-password">Current Password</label> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off", :class => "full-width has-padding form-control" %>
  </p>

  <p class="fieldset">
    <%= f.submit "Update", :class => "full-width" %>
  </p>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
